<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Location_List_Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/find_address_BT1"
            android:layout_width="28dp"
            android:layout_height="39dp"
            app:srcCompat="@drawable/flag" />

        <TextView
            android:id="@+id/find_address_BT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp"

            android:text="주소 찾기" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름: "
            android:textSize="17dp" />

        <EditText
            android:id="@+id/location_name_input"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="최대 10글자"
            android:inputType="textPersonName" />

    </LinearLayout>


    <Button
        android:id="@+id/location_register_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E46565"
        android:text="등록"
        android:textColor="#222"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

</LinearLayout>